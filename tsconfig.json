{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./built",
    "rootDir": "./src",
    "paths": {
      "@biothings-explorer/utils": ["../utils"],
      "@biothings-explorer/types": ["../types"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "__tests__/"],
  "references": [
    {
      "path": "../utils"
    },
    {
      "path": "../types"
    }
  ]
}
